<%- include("../layout/head", {title: "Edit blog" }) %>
    <%- include("../layout/header") %>
        <%- include("../layout/sidebar") %>

            <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                    <ol class="breadcrumb">
                        <li><a href="#"><svg class="glyph stroked home">
                                    <use xlink:href="#stroked-home"></use>
                                </svg></a></li>
                        <li><a href="">Quản lý Blogs</a></li>
                        <li class="active">
                            <%- blog.title%>
                        </li>
                    </ol>
                </div><!--/.row-->

                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Blogs: <%- blog.title%>
                        </h1>
                    </div>
                </div><!--/.row-->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="col-md-6">
                                    <form action="/admin/blogs/update/<%=blog._id%>" role="form" method="post"
                                        enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Tên blog</label>
                                            <input type="text" name="name" required class="form-control"
                                                value="<%- blog.title%>" placeholder="">
                                        </div>

                                        <div class="form-group">
                                            <label>Giá sản phẩm</label>

                                        </div>
                                        <div class="form-group">
                                            <label>Bảo hành</label>

                                        </div>
                                        <div class="form-group">
                                            <label>Phụ kiện</label>

                                        </div>
                                        <div class="form-group">
                                            <label>Khuyến mãi</label>

                                        </div>
                                        <div class="form-group">
                                            <label>Tình trạng</label>

                                        </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Ảnh sản phẩm</label>
                                        <input type="file" name="thumbnail">
                                        <br>
                                        <div>
                                            <img width="160px" src="../images/<%=blog.thumbnail%>">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Danh mục</label>
                                        <select name="cat_id" class="form-control">

                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Trạng thái</label>
                                        <select name="is_stock" class="form-control">

                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label>Sản phẩm nổi bật</label>
                                        <div class="checkbox">
                                            <label>

                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả</label>
                                        <textarea id="description" name="description" required class="form-control"
                                            rows="3"><%- blog.description%></textarea>
                                        <script>
                                            CKEDITOR.replace("description");
                                        </script>
                                    </div>
                                    <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                                    <button type="reset" class="btn btn-default">Làm mới</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div><!-- /.col-->
                </div><!-- /.row -->

            </div> <!--/.main-->

            <%- include("../layout/footer") %>