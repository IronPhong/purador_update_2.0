<%- include("./layouts/head.ejs", {title: "Blog" }) %>
   <%- include("./layouts/header.ejs") %>
      <!-- inner page section -->
      <section class="inner_page_head">
         <div class="container_fuild">
            <div class="row">
               <div class="col-md-12">
                  <div class="full">
                     <h3>Danh sách Blog</h3>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- end inner page section -->

      <!-- Blog -->
      <section class="why_section layout_padding">
         <div class="container">
            <!-- <div class="heading_container heading_center">
               <h2>
                  Câu chuyện của Tóc và Da
               </h2>
            </div> -->
            <div class="row" style="margin-top: 50px;">
               <div class="card-deck">
                  <%for(blog of blogs){%>
                     <div class="card blog_list">
                        <a href="/blog-<%=blog.slug%>.<%=blog._id%>"><img src="../images/<%=blog.thumbnail%>"
                              class="card-img-top" alt="..."></a>
                        <div class="card-body">
                           <a href="/blog-<%=blog.slug%>.<%=blog._id%>">
                              <h5 class="card-title">
                                 <%=blog.title%>
                              </h5>
                           </a>
                           <p class="card-text">
                              <%=blog.brief%>
                           </p>
                           <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small>
               </p> -->
                        </div>
                     </div>
                     <%}%>
               </div>

            </div>
         </div>
      </section>
      <!-- End Blog -->

      <%- include("./layouts/2nd_footer.ejs") %>
         <%- include("./layouts/js.ejs") %>